@{
    int month = DateTime.Now.Month;
    string urlBase = "https://www.campuspoint.com/assets/images/";
    string urlLogo = "CampusPointLogo";
    bool logoIsSpecial = false;
    if (month == 12) { urlLogo += "-Holiday"; logoIsSpecial = true; }
    if (month == 6) { urlLogo += "-Pride"; logoIsSpecial = true; }

    urlLogo = urlBase + urlLogo + ".png";
    //logo = "/assets/images/" + logo + ".png";
    //logo = GlobalSettings.CDN.Images.www + logo + ".png";
}
