@page
@model Admin.Pages.Candidates.List.IndexModel
@{
    Layout = null;
}
<div class="container">
    <div class="row">

        <table id="tbl-candidates" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th><input type="checkbox" value="true" name="chk-message" title="Select All" /> All</th>
                    <th>UserID</th>
                    <th>Status</th>
                    <th>Name</th>
                    <th>Connect</th>
                    <th>Mkt</th>
                    <th>FSI</th>
                    <th>FSI Scores</th>
                    <th><i class="fa-duotone fa-user-plus" title="Date Registered"></i></th>
                    <th><i class="fa-duotone fa-arrow-right-to-bracket" title="Last Login"></i></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th><input type="checkbox" value="true" name="chk-message" title="Select All" /> All</th>
                    <th>UserID</th>
                    <th>Status</th>
                    <th>Name</th>
                    <th>Connect</th>
                    <th>Mkt</th>
                    <th>FSI</th>
                    <th>FSI Scores</th>
                    <th><i class="fa-duotone fa-user-plus" title="Date Registered"></i></th>
                    <th><i class="fa-duotone fa-arrow-right-to-bracket" title="Last Login"></i></th>
                </tr>
            </tfoot>
            <tbody>
            @foreach(var u in Model.Users)
            {
                <tr data-candidate-user-id="@u.UserID">
                    <td><input type="checkbox" value="true" name="chk-message"/></td>
                    <td><small>@u.UserID</small></td>
                    <td>@u.IsActive.ToString().ToLower()</td>
                    <td>@u.FullName</td>
                    <td>
                        @u.PhonePrimary / @u.Email
                    </td>
                    <td>@u.StateAbr</td>
                    <td>@u.FsiStatus</td>
                    <td>A:@u.FsiScoreA / P:@u.FsiScoreP</td>
                    <td><small>@u.DateCreated.ToShortDateString()</small></td>
                    <td><small>@u.DateLastLogin.ToShortDateString()</small></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>




<p class="d-none"><strong class="text-warning">Results: @Model.Users.Count.ToString("N0")</strong></p>
