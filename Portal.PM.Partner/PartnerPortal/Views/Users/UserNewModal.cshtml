<div class="modal-content-wrapper">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()" data-toggle="modal"><i class="fa fa-times"></i></button>
    </div>
    <div class="modal-body">
        <h1>Add User</h1>

        <div ng-show="UserEditCtl.isLoading">
            @Html.Partial("_LoadingIndicator", "Loading User")
        </div>


        <div ng-show="!UserEditCtl.isLoading" class="mt-3">

            <div class="form-group">
                <select class="form-control" data-placeholder="User Type" ng-model="userType"
                ng-change="onchangeType()"
                    ng-options="item as item.name for item in userTypes track by item.value">
                </select>
            </div>

            <div ng-show="showOwnerForm">
                <h2 class="mb-2">Owner</h2>

                <form action="">
                    <div class="form-group">
                        <input type="text" class="form-input" name="LastName" placeholder="LastName" ng-model="user.LastName">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-input" name="FirstName" placeholder="FirstName" ng-model="user.FirstName">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-input" name="Email" placeholder="Email" ng-model="user.Email">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-input" name="Password" placeholder="Password" ng-model="user.Password">
                    </div>
                </form>
            </div>

            <input type="hidden" class="form-input" name="UserTypeID" placeholder="UserTypeID" ng-model="user.userType">

        </div>
        <!--modal-body-->


        <div class="modal-footer text-right" ng-show="!UserEditCtl.isLoading">
            <div class="btn btn-success" ng-click="clickSaveUser()" ng-show="showOwnerForm">Save</div>
            <div class="btn btn-outline-primary" ng-click="cancel()">Close</div>
        </div>
        <!--modal-footer-->
    </div>
    <!--modal-content-->

    <script type="text/javascript">
        $(function () {
            Utilities.Modals.init();
        });
    </script>
