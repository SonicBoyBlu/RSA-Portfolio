@model Acme.Services.Vendors.BambooHR.EmployeesTimeOff
<h5 class="text-info">Who's out</h5>

@if (Model.Count() == 0)
{
<p class="text-muted">Nobody requested timee off this week.</p>
}
else
{
<dl class="list-employees">
    @foreach (var t in Model)
    {
    <dt data-employee-id="@t.EmployeeId">
        <img src="@t.PhotoURL" class="img-circle img-responsive" />
        @t.Name
    </dt>
    <dd>@t.Start.ToShortDateString() - @t.End.ToShortDateString()</dd>
    }
