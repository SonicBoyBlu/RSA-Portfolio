<styles>
    <link rel="stylesheet" href="~/Content/styles/temp/app.css" />
</styles>


<div class="modal-content">
    <div class="modal-content-wrapper">
        <div class="modal-header">
            <h3  ng-show="!showSuccessMessage"><i class="fa fa-paper-plane"></i> New Action Item</h3>
            <button type="button" class="close" ng-click="cancel()"><span aria-hidden="true"><i class="fa fa-times-circle text-danger"></i></span><span class="sr-only">Close</span></button>
        </div>
        <div class="modal-body">
            <div ng-show="showSuccessMessage">
                <h1 class="text-success"><i class="fa fa-exclamation-triangle"></i> Action Item Created!</h1>
                The action item was successfully submitted.
            </div>

            @*<div class="action-items__header">
            <div class="action-items__header-title">
                <h2>New Action Item</h2>
            </div>
        </div>*@

            <div class="action-items__form" ng-show="!showSuccessMessage">
                <form>
                    <div class="form-group row">
                        <label for="actionItemSubject" class="col-sm-3 col-form-label">Subject<sup>*</sup></label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" ng-model="subject" id="actionItemSubject" maxlength="250">
                            @*<p class="subject-word-count"><span>0</span> / 250</p>*@
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="actionItemTextarea" class="col-sm-3 col-form-label">Message Body<sup>*</sup></label>
                        <div class="col-sm-9">
                            <textarea class="form-control" ng-model="message" id="actionItemTextarea" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="actionItemSubject" class="col-sm-3 col-form-label">Attachments</label>
                        <div class="col-sm-9">
                            <div class="upload-container">
                                <div class="file-upload-wrapper">
                                    <div class="file-upload-wrapper">
                                        <button class="upload-btn">Choose file</button>
                                        <input type="file" class="form-control-file" multiple="multiple" ngf-select="selectFiles($files)">
                                    </div>
                                </div>
                                <span class="input-value">
                                    <div ng-show="selectedFiles.length === 0">No file Chosen</div>
                                    <ul>
                                        <li ng-repeat="file in selectedFiles" class="action-items__content-message">
                                            <p>
                                                <i class="fa fa-paperclip"></i> {{file.name}}
                                                <a href="" ng-click="removeFile(file)" title="Remove File"><i class="far fa-times-circle text-danger"></i></a>
                                            </p>
                                        </li>
                                    </ul>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-3 col-sm-9">
                            <div class="inline-buttons">
                                <a href="" class="btn large empty icon" ng-click="cancel()">
                                    <span>Cancel</span>
                                </a>
                                <a href="" ng-disabled="!actionItemsCtl.canCreate()" class="btn large" ng-click="createActionItem()">
                                    <span>SUBMIT ACTION ITEM</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>