@model Acme.Models.CRM.Vendors.Vendor
    <form id="form-vendor-details">
        <h2 class="text-info">
            <input type="text" class="form-control" name="VendorName" value="@Model.VendorName" placeholder="Vendor Name" readonly="readonly" required="required" />

        </h2>

        <div class="container-fluid row">
            <div class="col">
                <dl>
                    <dt>Phone</dt>
                    <dd><input type="tel" class="form-control" name="Phone" value="@Model.Phone" placeholder="Phone" readonly="readonly" /></dd>
                    <dt>Phone 2</dt>
                    <dd><input type="tel" class="form-control" name="PhoneSecondary" value="@Model.PhoneSecondary" placeholder="Phone 2" readonly="readonly" /></dd>
                    <dt>Email</dt>
                    <dd><input type="email" class="form-control" name="Email" value="@Model.Email" placeholder="Email" readonly="readonly" /></dd>
                    <dt>Website</dt>
                    <dd><input type="url" class="form-control" name="Website" value="@Model.Website" placeholder="Website" readonly="readonly" /></dd>
                </dl>
            </div>
            <div class="col">
                <strong>Address</strong>
                <div class="row">
                    <div class="col-12">
                        <input type="text" class="form-control" name="Street" value="@Model.Street" placeholder="Street Address" readonly="readonly" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" name="City" value="@Model.City" placeholder="City" readonly="readonly" />
                    </div>
                    <div class="col-3">
                        <input type="text" class="form-control" name="State" value="@Model.State" placeholder="State" readonly="readonly" />
                    </div>
                    <div class="col-3">
                        <input type="text" class="form-control" name="Zip" value="@Model.Zip" placeholder="Zip" readonly="readonly" />
                    </div>
                </div>
                <strong>Description</strong>
                <div class="row">
                    <div class="col">
                        <textarea class="form-control" name="Description" placeholder="Description" readonly="readonly" rows="6">@Model.Description</textarea>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        <div class="container-fluid row">
            <div class="col">
                <dl>
                    <dt>Type</dt>
                    <dd>@(string.IsNullOrEmpty(Model.VendorType) ? "-" : Model.VendorType)</dd>
                    @if (!string.IsNullOrEmpty(Model.VendorID))
                    {
                        <dt>Created By</dt>
                        <dd>@Model.CreatedBy</dd>
                        <dt>Created</dt>
                        <dd>@Model.DateCreated.ToShortDateString()</dd>
                    }
                </dl>
            </div>
            <div class="col">
                <dl>
                    <dt>Category</dt>
                    <dd>@(string.IsNullOrEmpty(Model.Category) ? "-" : Model.Category)</dd>
                    @if (!string.IsNullOrEmpty(Model.VendorID))
                    {
                        <dt>Last Modified By</dt>
                        <dd>@Model.ModifiedBy</dd>
                        <dt>Last Modified</dt>
                        <dd>@Model.DateModified.ToShortDateString()</dd>
                    }
                </dl>

            </div>
        </div>
        <input type="hidden" class="form-control" name="VendorID" value="@Model.VendorID" />
    </form>
@if (string.IsNullOrEmpty(Model.VendorID))
{
<script type="text/javascript">
    $(function(){
        $(".form-control", "#form-vendor-details").removeAttr("readonly");
        $("#mdl-footer-vendor-detail-commands").removeClass("d-none");
    });
</script>
}