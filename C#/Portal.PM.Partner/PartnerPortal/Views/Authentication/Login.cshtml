@model Acme.ViewModels.Authentication.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<div class="bg-image"></div>

<div id="view-sitelogin" style="opacity:0" class="bg-transparent0">
    <div class="row">
        <div class="col-2"></div>
        <div class="site-logo-wrapper col-8">
            <img src="~/Content/images/Acme_logo.png" class="img-fluid" />
            <h3 class="site-title text-center">Partner Portal</h3>
        </div>
        <div class="col-2"></div>
    </div>
    <div class="container-fluid" style="padding:10px;">
        <div class="col">
            <div id="login-message"></div>
            <div id="login-form">
                <p>
                    <input type="email" name="Username" required class="form-control" placeholder="Username" />
                </p>

                <div id="div-password">
                    <p>
                        <input type="password" name="Password" required class="form-control" placeholder="Password" />
                    </p>
                    <p class="center-block text-center">
                        <button class="btn btn-success btn-block" id="btn-login" type="submit">Login</button>
                    </p>

                    <div class="center-block text-center" style="padding:20px;" id="div-pwforget">
                        <a href="#" id="a-pwforget">Forgot Password</a>
                    </div>

                </div>



                <div class="center-block text-center" style="padding-bottom:20px; display:none;" id="div-pwrestsend">
                    <button class="btn btn-info btn-block" id="btn-pwrestsend" type="submit">Reset my password</button>

                    <div class="center-block text-center" style="padding:20px;">
                        <a href="~/Login">Back to Login</a>
                    </div>

                </div>

                @*
                    <p class="center-block text-center">
                        <span id="btn-login-google" class="btn btn-success btn-block"><i class="fab fa-google-plus-g"></i> Google Login</span>
                    </p>
                *@
            </div>

        </div>
    </div>
</div>

@section scripts{
    <script src="https://www.gstatic.com/firebasejs/5.7.2/firebase.js"></script>
    <script type="text/javascript">
        $(function () {
            sessionStorage.removeItem("user");
            sessionStorage.removeItem("_tokens");

            $(document).on("keyup", function (e) {
                if (e.keyCode === 13)
                    $("[type='submit']:visible").submit();
            });
        });
    </script>
}
@section header {
    <link rel="stylesheet" href="~/Content/styles/views/login.min.css" />
}
