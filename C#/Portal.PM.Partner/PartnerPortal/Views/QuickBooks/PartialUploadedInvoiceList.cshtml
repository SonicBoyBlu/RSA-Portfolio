<table class="table table-condensed">
    <thead>
        <tr>
            <th scope="col">Invoice #</th>
            <th scope="col">Customer</th>
            <th scope="col">Due Date</th>
            <th scope="col">Amount</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @*| orderBy : 'CustomerName'*@
        <tr ng-repeat-start="invoice in invoiceCtl.uploadedInvoices" ng-show="!invoiceCtl.loading">
            <td ng-click="invoice.Expanded=!invoice.Expanded" class="selectable-cell">
                <i ng-show="!invoice.Expanded" class="fa fa-caret-down text-primary"></i>
                <i ng-show="invoice.Expanded" class="fa fa-caret-down text-danger"></i>
                <Label class="selectable">{{invoice.QboInvoiceNum}}</Label>
            </td>
            <td>{{invoice.CustomerName}}</td>
            <td>{{invoice.DueDate | date : shortDate}}</td>
            <td>{{invoice.LineItemsTotalIncludingTax | currency}}</td>
            @*<td><a href="https://c50.sandbox.qbo.intuit.com/app/invoice?txnId={{invoice.QboId}}" target="_blank">View</a></td>*@
            <td><a href="https://c6.qbo.intuit.com/app/invoice?txnId={{invoice.QboId}}" target="_blank">View</a></td>
        </tr>
        <tr ng-repeat-end ng-show="invoice.Expanded">
            <td colspan="5">
                @Html.Partial("PartialInvoice")
            </td>
        </tr>
    </tbody>
</table>


