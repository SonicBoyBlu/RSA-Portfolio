@{
    string nav = string.IsNullOrEmpty(ViewBag.Nav) ? "home" : ViewBag.Nav;
    var me = Identity.Current;
}
    <div ng-controller="NavigationController as navCtl">  
        <ul class="sidebar-nav">
            <li class="nav-border-bottom@(nav == "home" ? " active" : "")">
                <a href="/"><i class="fa fa-tachometer-alt"></i><span> Dashboard</span></a>
            </li>
            @if (me.IsAdmin || 1 == 1)
            {

                <li class="nav-border-bottom dropdown@(nav.Contains("admin") ? " active" : "")">
                    <a href="#nav-collapse-admin" data-toggle="collapse"><i class="fa fa-rocket"></i><span> Admin</span><i class="fa fa-chevron-circle-down"></i></a>
                    <div class="collapse@(nav.Contains("admin") ? " show" : "")" id="nav-collapse-admin">
                        <ul class="navbar-nav">
                            <li class="@(nav == "admin-users" ? "active" : "" )">
                                <a class="dropdown-item" href="@Url.Action("Index", "Users" )"><i class="fa fa-users-cog"></i><span> Users</span></a>
                            </li>
                        </ul>
                    </div>
                </li>

                <li class="nav-border-bottom dropdown @(nav.Contains("report") ? " active0" : "")">
                    <a href="#nav-collapse-reports" data-toggle="collapse"><i class="fa fa-chart-bar"></i><span> Reports</span><i class="fa fa-chevron-circle-down"></i></a>
                    <div class="collapse@(nav.Contains("report") ? " show" : "")" id="nav-collapse-reports">
                        <ul class="navbar-nav">
                            <li class="report-acme-main @(nav == "report-acme-main" ? "active" : "" )">
                                <a class="dropdown-item" href="@Url.Action("AcmeMain", "Reports" )"><i class="fas fa-chart-line"></i><span> Acme - Main</span></a>
                            </li>
                            <li class="report-breezeway @(nav == "report-breezeway" ? "active" : "" )">
                                <a class="dropdown-item" href="@Url.Action("BreezewayReporting", "Reports" )"><i class="fas fa-clipboard"></i><span> Breezeway</span></a>
                            </li>

                            <li class="report-go-zone @(nav == "report-go-zone" ? "active" : "" )">
                                <a class="dropdown-item" href="@Url.Action("GoZone", "Reports" )"><i class="fa fa-network-wired"></i><span> GoZone</span></a>
                            </li>
                            <li class="report-pc-tech @(nav == "report-pc-tech" ? "active" : "" )">
                                <a class="dropdown-item" href="@Url.Action("Productivity", "Reports" )"><i class="fa fa-tools"></i><span> Productivity</span></a>
                            </li>
                            <li class="report-revenue-projections @(nav == "report-revenue-projections" ? "active" : "" )">
                                <a class="dropdown-item" href="@Url.Action("RevenueProjections", "Reports" )"><i class="fa fa-file-invoice-dollar"></i><span> Rev Projections</span></a>
                            </li>
                        </ul>
                    </div>
                </li>
            }

            <li class="@(nav == "tickets" ? " active" : "" )">
                <a href="https://help.acmehouseco.com/Management/Root.aspx" target="acme-tickets"><i class="fa fa-paper-plane"></i><span> Action Items <span ng-show="navCtl.badges.ActionItemsCount > 0" class="badge badge-success">{{navCtl.badges.ActionItemsCount}}</span></span></a>
            </li>
            <li class="@(nav == "tickets" ? " active" : "")">
                <a href="https://help.acmehouseco.com/Management/Root.aspx" target="acme-tickets"><i class="fa fa-clipboard-check"></i><span> Tasks <span ng-show="navCtl.badges.TaskCount > 0" class="badge badge-success">{{navCtl.badges.TaskCount}}</span></span></a>
            </li>
            <li class="@(nav == "crm" ? " active" : "" )">
                <a href="@Url.Action("Index", "CRM")"><i class="fa fa-users"></i><span> CRM</span></a>
            </li>
            <li>
                <a href="https://mail.google.com" target="acme-email"><i class="fa fa-envelope"></i><span> Email</span></a>
            </li>
            <li>
                <a href="https://calendar.google.com" target="acme-calendar"><i class="fa fa-calendar-alt"></i><span> Calendar</span></a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Reservation")"><i class="fa fa-id-card"></i><span> Reservations</span></a>
            </li>
            <li class="nav-border-bottom @(nav == "invoices" ? " active" : "" )">
                <a href="@Url.Action("Index", "Workorders" )"><i class="fa fa-file-invoice"></i><span> WO Review</span></a>
            </li>



            <li class="pt-10@(nav == "contact" ? " active" : "" )">
                <a href="https://acmehouseco.escapia.com/" target="acme-window-escapia"><img src="~/Content/images/vendors/escapia.svg" alt="escapia.com" /></a>
            </li>
            <li class="@(nav == "contact" ? " active" : "")">
                <a href="https://acmehouseco.Monday.com" target="acme-window-monday"><img src="~/Content/images/vendors/monday.jpg" alt="Monday.com" /></a>
            </li>
            <li class="@(nav == "newsletter" ? " active" : "")">
                <a href="https://app.breezeway.io/task" target="acme-window-breezeway"><img src="~/Content/images/vendors/breezeway.jpg" alt="Breezeway" /></a>
            </li>
            <li class="nav-border-bottom pb-10@(nav == "education" ? " active" : "" )">
                <a href="https://acmehouseco.bamboohr.com/home/" target="acme-window-bamboo"><img src="~/Content/images/vendors/bamboo.jpg" alt="Bamboo HR" /></a>
            </li>




            <li class="@(nav == "team" ? " active" : "")">
                <a href="@Url.Action("Index", "TeamAcme")"><i class="fa fa-address-card"></i><span> Team Acme</span></a>
            </li>
            <li class="nav-border-bottom@(nav == "education" ? " active" : "" )">
                <a href="@Url.Action("Index", "Education" )"><i class="fa fa-university"></i><span> Education</span></a>
            </li>

            <li class="@(nav == "ticket-bug" ? "active" : "" )">
                <a class="dropdown-item" href="@Url.Action("Bugs", "Reports" )"><i class="fa fa-bug"></i><span> Report A Bug</span></a>
            </li>


            <li class="dropdown@(nav == "my-account" ? " active" : "")">
                <a href="#nav-collapse-myaccount" data-toggle="collapse"><i class="fa fa-cog"></i><span> My Account</span><i class="fa fa-chevron-circle-down"></i></a>
                <div class="collapse" id="nav-collapse-myaccount">
                    <ul class="navbar-nav">
                        <li class="nav-border-bottom">
                            <a class="dropdown-item" href="@Url.Action("Index", "MyAccount")"><i class="fa fa-user"></i><span> My Info</span></a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Authentication")"><i class="fa fa-power-off"></i><span> Signout</span></a>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
        @{
            string[] titleIcon = string.IsNullOrEmpty(ViewBag.TitleIcon) ? new string[] { } : ViewBag.TitleIcon.Split(' ');
            string icon = titleIcon.Length == 0 ? "" : titleIcon[titleIcon.Length - 1].Replace(".", "");
        }
    </div>
<script type="text/javascript">
    $(function () {
        //$(".sidebar-nav li").removeClass("active");
        var fa = $(".@icon").closest("li");
        fa.addClass("active");
        //fa.closest("li").addClass("active");
    });
</script>